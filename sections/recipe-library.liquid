{{ 'component-recipe-library.css' | asset_url | stylesheet_tag }}
{{ 'component-recipe-library.mobile.css' | asset_url | stylesheet_tag }}

<div class="section-recipe-library">
  <div class="page-width" id="recipe-library-section">
    {%- for block in section.blocks -%}
      {% case block.type %}
        {%- when 'heading' -%}
          <h2
            class="recipe-library__heading inline-richtext {{ block.settings.heading_size }}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.heading }}
          </h2>
      {%- endcase -%}
    {%- endfor -%}
      <div class="recipe-library__grid">
        <div class="recipe-library__media-item">
          <div class="recipe-library__media">
            <img src="https://cdn.shopify.com/s/files/1/0674/7750/4191/files/recipes-image.png?v=1735130467" width="100%" height="100%">
          </div>
        </div>
        <div class="recipe-library__text-item">
          <div class="recipe-library__content">
            <div class="recipe-library_info">
              {%- for block in section.blocks -%}
                {% case block.type %}
                  {%- when 'caption' -%}
                    <p
                      class="recipe-library__text recipe-library__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.caption | escape }}
                    </p>
                  {%- when 'text' -%}
                    <div class="recipe-library__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                      {{ block.settings.text }}
                    </div>
                  {%- when 'button' -%}
                    {%- if block.settings.button_label != blank -%}
                      <a
                        {% if block.settings.button_link == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block.settings.button_link }}"
                        {% endif %}
                        class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                        {{ block.shopify_attributes }}
                      >
                        {{ block.settings.button_label | escape }}
                      </a>
                    {%- endif -%}
                {%- endcase -%}
              {%- endfor -%}
              <div class="content">
                <ul>
                  <li class="content-item">
                      <h5>Delicious meals for all preferences</h5>
                      <p>
                        Enjoy 250+ dietician approved macro-friendly <br class="d-break"><br class="m-break">recipes to choose from (with new ones added <br class="m-break">monthly!)
                      </p>
                  </li>
                  <li class="content-item">
                    <h5>Build a meal plan that fits your goal <br class="m-break">and your life</h5>
                    <p>
                      Whether you want to gain muscle or get <br class="m-break">shredded, achieve <br class="d-break">your goals with our <br class="m-break">evidence-based nutrition
                    </p>
                  </li>
                  <li class="content-item">
                    <h5>Share your journey in our exclusive <br class="m-break">community</h5>
                    <p>
                      Connect with like-minded women, celebrate <br class="m-break">your successes <br class="d-break">in the app, get inspired, <br class="m-break">and gain support
                    </p>
                  </li>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

