{% comment %}
  Adds google tag to HTML

  Accepts:
    - tag_id: {String} Google Tag Id
  Usage:
  {% render 'google-tag', tag_id: 'AW-16830318629' %}
{% endcomment %}

<!-- Google tag (gtag.js) --> 
<script defer src="https://www.googletagmanager.com/gtag/js?id={{ tag_id }}"></script> 
<script>
  window.addEventListener('load', e => {
    window.dataLayer = window.dataLayer || []; 
    function gtag() {
      window.dataLayer.push(arguments);
    } 
    gtag('js', new Date()); 
    gtag('config', '{{ tag_id }}'); 
    console.log(window.dataLayer);
  });
</script>
