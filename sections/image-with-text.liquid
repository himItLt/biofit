<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'component-image-with-text.mobile.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width homepage-slider">
    <div class="home-slider__wrapper">
      <div class="home-slider__grid">
        <div class="image-with-text home-slide">
          <div class="image-with-text__grid">
            <div class="image-with-text__text-item">
              <div id="ImageWithText--{{ section.id }} " class="image-with-text__content biafit-zoom">
                {%- for block in section.blocks -%}
                  {% case block.type %}
                    {%- when 'heading' -%}
                      <h2
                        class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                        {{ block.shopify_attributes }}
                      >
                        Meet BiaFit:<br>
                        Your Evidence Based<br> 
                        Training Companion!
                      </h2>
                    {%- when 'text' -%}
                      <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                        We'll help you become the best version of yourself, with customized, <br class="d-break">
                        supportive, evidence based and empowering training programs, <br class="d-break">
                        and expert guidance.
                      </div>
                    {%- when 'button' -%}
                      {%- if block.settings.button_label != blank -%}
                        <a href="#membership-section" id="main-block-button" class="button button--primary">
                          Join Now  
                        </a>
                      {%- endif -%}
                  {%- endcase -%}
                {%- endfor -%}
                <div class="counter-block">
                  <div class="counter-block-item">
                    <h2 class="counter-number">250+</h2>
                    <span class="counter-text">Recipes</span>
                  </div>
                  <div class="counter-block-item">
                    <h2 class="counter-number">40+</h2>
                    <span class="counter-text">Programs</span>
                  </div>
                  <div class="counter-block-item">
                    <h2 class="counter-number">700+</h2>
                    <span class="counter-text">Exercise Videos</span>
                  </div>
                  <div class="counter-block-item">
                    <h2 class="counter-number">5,000+</h2>
                    <span class="counter-text">Community Members</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {% for product in collections['challenges'].products %}
          {% if product.id == 8030980735167 %}
            {% assign start_date = product.metafields.custom.challenge_start.value | date: "%a, %b %d, %Y" %}
          {% endif %}
       {% endfor %}
    
        <div class="home__challenge-wrapper home-slide">
          <div class="challenge-main biafit-zoom">
            <div class="start-date-block">
              <div class="date-value"><span>Start Date: {{ start_date }}</span></div>
            </div>
            <h1 class="challenge-title">New 6 week challenge</h1>
            <div class="home__love-fit"></div>
            <div class="home__be-quick">Be Quick! Sign-Ups Close Soon!</div>
            <div class="button-block">
              <a
                href="/challenge"
                class="button button--primary biafit-buy-button"
              >
                Join Now
              </a>
            </div>
            <div class="home__challenge-brands"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

