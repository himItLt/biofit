{{ 'component-membership.css' | asset_url | stylesheet_tag }}
{{ 'component-membership.mobile.css' | asset_url | stylesheet_tag }}

<div class="section-membership membership">
  <div class="page-width" id="membership-section">
    {%- for block in section.blocks -%}
      {% case block.type %}
        {%- when 'heading' -%}
          <h2
            class="membership__heading inline-richtext {{ block.settings.heading_size }}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.heading }}
          </h2>
        {%- endcase -%}
      {%- endfor -%}
      <div class="membership__grid">
        <div class="membership__media-item">
          <div class="membership__media">
            <div class="plans-form">
              <div class="plan-item unchecked" id="plan1">
                <input type="radio" name="current-plan" id="plan-1" value="plan1">
                <label class="plan-info">
                  <div class="plan-description">
                    <h5 class="plan-title">Monthly</h5>
                    <p><span class="plan-price">$29 USD</span><span class="plan-frequency"> / month</span></p>
                  </div>
                  <div class="plan-discount"></div>
                </label>
              </div>
              <div class="plan-item unchecked" id="plan2">
                <input type="radio" name="current-plan" id="plan-2" value="plan2">
                <label class="plan-info">
                  <div class="plan-description">
                    <h5 class="plan-title">Semi-Annual</h5>
                    <p><span class="plan-price">$119 USD</span><span class="plan-frequency"> / every 6 month</span></p>
                  </div>
                  <div class="plan-discount">Save 30%</div>
                </label>
              </div>
              <div class="plan-item checked" id="plan3">
                <input type="radio" name="current-plan" id="plan-3" value="plan3">
                <label class="plan-info best-price" for="plan-3">
                  <div class="plan-description">
                    <h5 class="plan-title">Annual</h5>
                    <p><span class="plan-price">$179 USD</span><span class="plan-frequency"> / per year</span></p>
                  </div>
                  <div class="plan-discount">Save 50%</div>
                </label>
              </div>
            </div>
          </div>
        </div>
        <div class="membership__text-item">
          <div class="membership__content">
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'caption' -%}
                  <p class="membership__text membership__text--caption">
                    {{ block.settings.caption | escape }}
                  </p>
                {%- when 'text' -%}
                  <div class="membership__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                    <!-- TODO: add mobile breaks regarding new text -->
                    <h2>
                      Your Transformation Starts <br class="d-break">
                      Now: <strong>SAVE OVER 30% ON A FULL YEAR!</strong>
                    </h2>
                    <p>
                      We'll help you reach your goals with 50+ workout programs, a dietician-<br class="d-break">
                      approved recipe library, detailed analytics and progress tracking,<br class="d-break">
                       and a supportive community. Don't wait any longer. Get started<br class="d-break">
                       on your fitness goals today!
                    </p>
                  </div>
                {%- when 'button' -%}
                    <a
                      id="membership_join-us"
                      href="#"
                      class="button button--primary"
                    >
                      Join Now
                    </a>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
  </div>
</div>

